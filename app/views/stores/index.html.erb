<p id="notice"><%= notice %></p>

<h1>Stores</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>State</th>
      <th>City</th>
      <th>Telephone</th>
      <th>Email</th>
      <th>Website</th>
      <th>Contact</th>
      <th>Contact phone</th>
      <th>Contact email</th>
      <th>Owner name</th>
      <th>Owner phone</th>
      <th>Owner email</th>
      <th>Accounting email</th>
      <th>Free</th>
      <th>Delivery</th>
      <th>Visible</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.address %></td>
        <td><%= store.state %></td>
        <td><%= store.city %></td>
        <td><%= store.telephone %></td>
        <td><%= store.email %></td>
        <td><%= store.website %></td>
        <td><%= store.contact %></td>
        <td><%= store.contact_phone %></td>
        <td><%= store.contact_email %></td>
        <td><%= store.owner_name %></td>
        <td><%= store.owner_phone %></td>
        <td><%= store.owner_email %></td>
        <td><%= store.accounting_email %></td>
        <td><%= store.free %></td>
        <td><%= store.delivery %></td>
        <td><%= store.visible %></td>
        <td><%= store.active %></td>
        <td><%= link_to 'Show', store %></td>
        <td><%= link_to 'Edit', edit_store_path(store) %></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Store', new_store_path %>
